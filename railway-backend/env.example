# Study Buddy Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/study_buddy

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Apple App Store Configuration (for mobile subscription verification)
APPLE_SHARED_SECRET=your_apple_shared_secret_here

# Google Play Store Configuration (for mobile subscription verification)
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=your_google_play_service_account_key_here

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
